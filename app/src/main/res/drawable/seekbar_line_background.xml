<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background track -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/_10sdp" />
            <solid android:color="@color/failedTransaction"/>
        </shape>
    </item>

    <!-- Progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="@dimen/_1sdp" /> <!-- Change this value to adjust the thickness -->
                <solid android:color="#ED1E79" />
            </shape>
        </clip>
    </item>
</layer-list>
