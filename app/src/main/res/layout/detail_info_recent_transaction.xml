<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCustomerdetails"
            android:text="Customer Details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/menuHeadingGradientTextStyle" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/close_icon"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/table_border">

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/card_number_label"
                    android:layout_width="0dp"
                    android:text="Card Number"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/card_number_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="xxxxxxxxxxxx4241" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/card_status_label"
                    android:layout_width="0dp"
                    android:text="Card Status"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/card_status_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="A" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/description_label"
                    android:layout_width="0dp"
                    android:text="Description"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/description_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="Top Up" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/form_label"
                    android:layout_width="0dp"
                    android:text="Form"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/form_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="Credit" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/amount_label"
                    android:layout_width="0dp"
                    android:text="Amount"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/amount_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="1000" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="0dp"
                    android:text="Type"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/type_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="Top Up" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="0dp"
                    android:text="Date"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/date_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="14/02/2024" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/time_label"
                    android:layout_width="0dp"
                    android:text="Time"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/time_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="17:30:42" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/transaction_id_label"
                    android:layout_width="0dp"
                    android:text="Transaction ID"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/transaction_id_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="00000000183050" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/transaction_status_label"
                    android:layout_width="0dp"
                    android:text="Transaction Status"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/transaction_status_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="Success - 183050" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/failure_reason_label"
                    android:layout_width="0dp"
                    android:text="Failure Reason"
                    style="@style/textStyle_14_600_table" />

                <TextView
                    android:id="@+id/failure_reason_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="approved - balance unavail" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/wallet_label"
                    style="@style/textStyle_14_600_table"
                    android:layout_width="0dp"
                    android:text="Wallet" />

                <TextView
                    android:id="@+id/wallet_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="PREPAID CARD" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/merchant_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="Merchant" />

                <TextView
                    android:id="@+id/last_name_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="SBI Paycraft MO" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/merchant_id_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="Merchant ID" />

                <TextView
                    android:id="@+id/merchant_id_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="000003423" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/terminal_id_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="Terminal ID" />

                <TextView
                    android:id="@+id/terminal_id_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="0000003232" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/mcc_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="MCC" />

                <TextView
                    android:id="@+id/mcc_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="1234567890" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/settlement_status_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="Settlement Status" />

                <TextView
                    android:id="@+id/settlement_status_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="Yes" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/currency_label"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_600_table"
                    android:text="Currency" />

                <TextView
                    android:id="@+id/currency_value"
                    android:layout_width="0dp"
                    style="@style/textStyle_14_400_table"
                    android:text="INR" />
            </TableRow>

        </TableLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download detail in PDF:"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Download"/>

    </LinearLayout>

</LinearLayout>