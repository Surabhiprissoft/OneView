            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_height="@dimen/_35sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCardRefNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center_vertical"
                        android:background="#FFD7E8"
                        style="@style/textstyle_16_400"
                        android:paddingStart="@dimen/_10sdp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_1sdp"
                        app:cardElevation="@dimen/_50sdp"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/tvCopy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            style="@style/textstyle_16_400"
                            android:text="@string/copy"/>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        <TextView
            style="@style/textstyle_18_400"
            android:textColor="@color/white"
            android:text="@string/please_visit_nearest_tom_counter_for_issuing_your_transit_card"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLoginNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#662D91"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_12sdp"
                app:cornerRadius="@dimen/_10sdp"
                android:text="Login Now !"/>



    </LinearLayout>



    <ImageView
        android:id="@+id/imgSbiLogo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/sbi_logo"/>

