<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ui.login.LoginActivity">
    <ImageView
        android:id="@+id/bottomLeft_image"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="-210dp"
        android:layout_marginStart="-310dp"
        android:src="@drawable/bg_one"/>

    <ImageView
        android:id="@+id/bottomRight_image"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="-310dp"
        android:layout_marginBottom="-200dp"
        android:src="@drawable/bg_two"/>

    <ImageView
        android:id="@+id/topRight_image"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="-300dp"
        android:layout_marginTop="-290dp"
        android:src="@drawable/bg_three"/>





    <TextView
        android:id="@+id/txtNewCardApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Transit Card Application"
        android:focusable="false"
        android:textAlignment="center"
        android:textColor="@color/header_white_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_gravity="center"
        style="@style/textstyle_20_600" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNewCardApplication">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Select Card"
                    style="@style/textstyle_16_400"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


                <Spinner
                    android:id="@+id/spinner_selectcard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:overlapAnchor="false"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:background="@drawable/bg_spinner"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Basic Details"
                    style="@style/textstyle_16_400"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <Spinner
                    android:id="@+id/spinner_selectsalutation"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:overlapAnchor="false"
                    android:background="@drawable/bg_spinner"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/et_firstname"
                    android:inputType="text"
                    android:hint="First Name"
                    style="@style/edittext_registration" />
                <EditText
                    android:id="@+id/et_middlename"
                    android:inputType="text"
                    android:hint="Middle Name"
                    style="@style/edittext_registration" />

                <EditText
                    android:id="@+id/et_lastname"
                    style="@style/edittext_registration"
                    android:hint="Last Name"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/et_dob"
                    android:inputType="none"
                    android:editable="false"
                    android:hint="Date of Birth"
                    style="@style/edittext_registration" />

                <EditText
                    android:id="@+id/et_pan"
                    android:inputType="text"
                    android:hint="PAN"
                    style="@style/edittext_registration" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="OVD Details"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textstyle_16_400">
                </TextView>


                <Spinner
                    android:id="@+id/spinner_selectovdType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_spinner"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/et_ovddetails"
                    android:inputType="text"
                    android:hint="OVD Details"
                    style="@style/edittext_registration" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkBox_declaration"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="@dimen/_22sdp"
                    app:buttonTint="@color/white"
                    android:layout_height="@dimen/_22sdp">

                </androidx.appcompat.widget.AppCompatCheckBox>
                <TextView
                    android:text="I accept all declarations pertaining to SBI Prepaid Card Application."
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#662D91"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_12sdp"
                app:cornerRadius="@dimen/_10sdp"
                android:text="@string/apply"/>


            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/sbi_logo"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>