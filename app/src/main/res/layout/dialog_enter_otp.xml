<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_18sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/h1"
                android:text="Enter OTP"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/imgClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/dialogHeadingTextStyle" />

            <TextView
                android:id="@+id/h2"
                android:text="OTP has been sent to your Email and Mobile number registered."
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/h1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/dialogNormalTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="4"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/ovelay_file"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/ovelay_file"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/ovelay_file"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/ovelay_file"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_weight="1"/>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                android:text="Verify"
                style="@style/purpleButtonStyle" />

            <TextView
                android:id="@+id/tvResendOtp"
                android:text="@string/resendOtp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/h1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/dialogNormalTextStyle" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>