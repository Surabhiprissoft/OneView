<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.transitScreen.ContactUsBlankFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <include
          layout="@layout/common_header"/>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#EAEAEA"
          android:orientation="vertical">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/_20sdp"
             android:layout_marginBottom="@dimen/_20sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContactUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:background="@drawable/contact_us_gradient_bg">

                  <TextView
                      android:id="@+id/tvContactMethod"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_gravity="center"
                      android:textSize="@dimen/_14ssp"
                      android:text="Contact"
                      android:textFontWeight="600"
                      android:textColor="@color/black"
                      android:gravity="center"/>



                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/rvContactMethods"
                      android:gravity="center"
                      android:layout_marginStart="@dimen/_15sdp"
                      android:layout_marginEnd="@dimen/_15sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      tools:itemCount="5"/>


               </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/cardContactUs"
                app:layout_constraintEnd_toEndOf="@id/cardContactUs"
                app:cardCornerRadius="@dimen/_50sdp">

               <ImageView
                   android:id="@+id/imgContactMethod"
                   android:layout_gravity="center"
                   android:src="@drawable/img_phone"
                   android:layout_margin="@dimen/_7sdp"
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"/>

            </com.google.android.material.card.MaterialCardView>

         </androidx.constraintlayout.widget.ConstraintLayout>


         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/_20sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:background="@drawable/contact_us_gradient_bg">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textSize="@dimen/_14ssp"
                      android:text="Contact"
                      android:textFontWeight="600"
                      android:textColor="@color/black"
                      android:gravity="center"/>

                  <TextView
                      android:id="@+id/tvEmail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#00B5EF"
                      android:autoLink="email"
                      android:text="@string/contactcentre_sbi_co_in"
                      android:layout_marginTop="@dimen/_15sdp"
                      android:textSize="@dimen/_12ssp"
                      android:textFontWeight="600" />



               </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/cardMail"
                app:layout_constraintEnd_toEndOf="@id/cardMail"
                app:cardCornerRadius="@dimen/_50sdp">

               <ImageView
                   android:layout_gravity="center"
                   android:src="@drawable/img_email"
                   android:layout_margin="@dimen/_7sdp"
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"/>

            </com.google.android.material.card.MaterialCardView>

         </androidx.constraintlayout.widget.ConstraintLayout>


         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/_20sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_10sdp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:background="@drawable/contact_us_gradient_bg">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textSize="@dimen/_14ssp"
                      android:text="WebSite"
                      android:textFontWeight="600"
                      android:textColor="@color/black"
                      android:gravity="center"/>

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textSize="@dimen/_12ssp"
                      android:textColor="@color/black"
                      android:text="Please visit our website"
                      android:textFontWeight="400"
                      android:gravity="center"/>

                  <TextView
                      android:id="@+id/tvContactInfo"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/https_transit_sbi"
                      android:autoLink="web"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textColor="#00B5EF"
                      android:textSize="@dimen/_12ssp"
                      android:textFontWeight="600" />




               </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/cardWeb"
                app:layout_constraintEnd_toEndOf="@id/cardWeb"
                app:cardCornerRadius="@dimen/_50sdp">

               <ImageView
                   android:layout_gravity="center"
                   android:src="@drawable/img_web"
                   android:layout_margin="@dimen/_7sdp"
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"/>

            </com.google.android.material.card.MaterialCardView>

         </androidx.constraintlayout.widget.ConstraintLayout>


      </LinearLayout>
   </androidx.core.widget.NestedScrollView>



   </LinearLayout>


</FrameLayout>