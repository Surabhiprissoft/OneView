<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".TransitCardDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EAEAEA"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvQuickAccess"
                    android:text="Quick Access"
                    tools:showIn="@layout/fragment_transit_card_dashboard"
                    style="@style/menuHeadingGradientTextStyle" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_10sdp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:src="@drawable/card_top_up_qa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Card Top up" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_10sdp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:src="@drawable/reset_pin_qa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Reset Pin" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_10sdp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:src="@drawable/card_block_qa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Card Hotlist"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_10sdp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/card_statement_qa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Card Statement" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tvMyCards"
                    android:text="My Cards"
                    style="@style/menuHeadingGradientTextStyle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:clipToPadding="true"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <com.sbi.oneview.utils.CustomIndicatorView
                    android:id="@+id/customIndicator"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/tvCardDetails"
                    android:text="Card Details"
                    style="@style/menuHeadingGradientTextStyle"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="@dimen/_7sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCN"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Card Number"
                            style="@style/cardDetailsHeadingTextStyle" />

                        <TextView
                            android:id="@+id/tvCardNumber"
                            app:layout_constraintTop_toBottomOf="@id/tvCN"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Card Number"
                            style="@style/cardDetailsValueTextStyle" />


                        <TextView
                            android:id="@+id/tvCRNTitle"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="CRN"
                            style="@style/cardDetailsHeadingTextStyle"/>

                        <TextView
                            android:id="@+id/tvCRNNumber"
                            app:layout_constraintTop_toBottomOf="@id/tvCN"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="12345"/>


                        <TextView
                            android:id="@+id/tvCS"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvCardNumber"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Card Status"
                            style="@style/cardDetailsHeadingTextStyle"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardStatusCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#A8FBB5"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvCS"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:text="Active"/>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            android:id="@+id/tvCPN"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvCRNNumber"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Card Product Name"
                            style="@style/cardDetailsHeadingTextStyle"/>

                        <TextView
                            android:id="@+id/tvCardProductName"
                            app:layout_constraintTop_toBottomOf="@id/tvCPN"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="Product Name"/>

                        <TextView
                            android:id="@+id/tvAD"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/cardStatusCard"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Card Act. Date"
                            style="@style/cardDetailsHeadingTextStyle"/>
                        <TextView
                            android:id="@+id/tvCardActiveDate"
                            app:layout_constraintTop_toBottomOf="@id/tvAD"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="1 Jan 2020"/>

                        <TextView
                            android:id="@+id/tvED"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:text="Card Exp. Date"
                            style="@style/cardDetailsHeadingTextStyle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvCardProductName" />
                        <ImageView
                            android:id="@+id/imgExpDate"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvED"
                            android:src="@drawable/hide_icon"/>
                        <TextView
                            android:id="@+id/tvCardExpDate"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvED"
                            app:layout_constraintEnd_toStartOf="@id/imgExpDate"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="XX / XX"/>

                        <TextView
                            android:id="@+id/tvCB"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvCardActiveDate"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Card Bal."
                            style="@style/cardDetailsHeadingTextStyle"/>
                        <TextView
                            android:id="@+id/tvCardBalance"
                            app:layout_constraintTop_toBottomOf="@id/tvCB"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="$15000.00"/>
                        <TextView
                            android:id="@+id/tvCardBalanceDate"
                            app:layout_constraintTop_toBottomOf="@id/tvCardBalance"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="[As on 1/11/2024]"/>

                        <TextView
                            android:id="@+id/tvChipB"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/imgExpDate"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Card Chip Bal."
                            style="@style/cardDetailsHeadingTextStyle"/>

                        <TextView
                            android:id="@+id/tvChipBalance"
                            app:layout_constraintTop_toBottomOf="@id/tvChipB"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="[$15000.00]"/>
                        <TextView
                            android:id="@+id/tvChipBalanceDate"
                            app:layout_constraintTop_toBottomOf="@id/tvChipBalance"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/cardDetailsValueTextStyle"
                            android:text="[As on 1/11/2024]"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvRecentTransaction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/menuHeadingGradientTextStyle"
                        android:text="Recent Transaction"
                        tools:showIn="@layout/fragment_transit_card_dashboard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#D6224F"
                        android:text="@string/viewAll"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentTransaction"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:layout_height="@dimen/_200sdp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/tvAnalytics"
                    android:text="Analytics"
                    style="@style/menuHeadingGradientTextStyle" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:strokeWidth="0dp"
                    android:padding="@dimen/_10sdp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_8sdp">

                                <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:background="@drawable/ovelay_file"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTopUpRupee"
                                    android:text="@string/Rs"
                                    style="@style/AnalyticsValueTextStyle" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textFontWeight="400"
                                    android:text="Top Up"/>

                            </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_8sdp">

                                <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:gravity="center"
                                    android:background="@drawable/ovelay_file"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvSpendRupee"
                                    style="@style/AnalyticsValueTextStyle"
                                    android:text="@string/Rs"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:text="Spend"/>

                            </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/small_card_gradient_bg"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_23ssp"
                                    android:text="Parliment Canteen"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Favorite : Merchant"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                         <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                             <com.google.android.material.card.MaterialCardView
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_marginEnd="@dimen/_10sdp"
                                 android:layout_height="@dimen/_80sdp"
                                 app:cardCornerRadius="@dimen/_8sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp"
                                    android:gravity="center"
                                    android:background="@drawable/ovelay_file"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvSinceLastTopUp"
                                        style="@style/AnalyticsValueTextStyle"
                                        android:text="21 Days"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10ssp"
                                        android:textStyle="bold"
                                        android:text="Since Last Topup"/>

                                </LinearLayout>
                             </com.google.android.material.card.MaterialCardView>

                             <com.google.android.material.card.MaterialCardView
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="@dimen/_80sdp"
                                 android:layout_marginStart="@dimen/_10sdp"
                                 app:cardCornerRadius="@dimen/_8sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp"
                                    android:gravity="center"
                                    android:background="@drawable/ovelay_file"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvSuccessTxns"
                                        style="@style/AnalyticsValueTextStyle"
                                        android:text="400+"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10ssp"
                                        android:textStyle="bold"
                                        android:text="Success TXNS"/>

                                </LinearLayout>
                             </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:gravity="center"
                                android:background="@drawable/ovelay_file"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvSinceLastLogin"
                                    style="@style/AnalyticsValueTextStyle"
                                    android:text="40 Days"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:text="Since Last Login"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:text="on 22/02/2024"/>

                            </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:gravity="center"
                                android:background="@drawable/ovelay_file"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvLastStatementGenerated"
                                    style="@style/AnalyticsValueTextStyle"
                                    android:text="32 Days"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:text="Since Last"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:text="Statement Generated"/>

                            </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</FrameLayout>