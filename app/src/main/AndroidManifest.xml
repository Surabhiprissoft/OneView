            android:name=".ui.inrPrepaid.InrPrepaidHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.SuccessfulRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.ApplyTransitCardActivity"
            android:exported="true" />
        <activity
            android:name=".ui.mainDashboard.DashboardCardSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.registration.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.MpinActivity"
            android:exported="false" />
        <activity
            android:name=".ui.transitScreen.TransitHomeActivity"
            android:exported="false"
